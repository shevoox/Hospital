@{
    ViewData["Title"] = "Home Page";
}

<main>
    <section id="hero">
        <div class="hero-content">
            <div class="doctors-grid">
                <img src="images/doctor1.jpg" alt="Professional doctor with stethoscope" class="doctor-img">
                <img src="images/doctor2.jpg" alt="Doctor wearing protective mask" class="doctor-img">
                <img src="images/doctor3.jpg" alt="Doctor with glasses and stethoscope" class="doctor-img">
            </div>
            <h1>Take care Your Medical Billing.<br>Accelerate Your Payments.</h1>
            <p class="subtitle">We make the complicated world of medical billing simple and stress-free so you can be paid quickly and with the least amount of trouble possible.</p>
            <button class="book-appointment">Book an appointment</button>
        </div>
    </section>

    <section id="book-appointment" class="booking-section">
        <div class="container">
            <div class="cursor-header">
                <h2>Available Doctors</h2>
                <div class="cursor-controls">
                    <input type="text" placeholder="Search doctors..." class="search-doctors">
                    <select class="filter-specialty">
                        <option value="">All Specialties</option>
                        <option value="cardiologist">Cardiologist</option>
                        <option value="neurologist">Neurologist</option>
                        <option value="pediatrician">Pediatrician</option>
                        <option value="dermatologist">Dermatologist</option>
                        <option value="orthopedic">Orthopedic</option>
                        <option value="psychiatrist">Psychiatrist</option>
                    </select>
                </div>
            </div>

            <div class="doctors-list">
                <div class="doctor-card">
                    <img src="images/doctor1.jpg" alt="Dr. John Smith" class="doctor-profile">
                    <div class="doctor-info">
                        <div class="doctor-header">
                            <h3>Dr. John Smith</h3>
                            <span class="status available">Available</span>
                        </div>
                        <p class="specialty">Cardiologist</p>
                        <p class="availability">Available: Mon - Fri</p>
                        <button class="book-doctor-btn">Book Appointment</button>
                    </div>
                </div>

                <div class="doctor-card">
                    <img src="images/doctor2.jpg" alt="Dr. Robert Williams" class="doctor-profile">
                    <div class="doctor-info">
                        <div class="doctor-header">
                            <h3>Dr. Robert Williams</h3>
                            <span class="status available">Available</span>
                        </div>
                        <p class="specialty">Neurologist</p>
                        <p class="availability">Available: Tue - Sat</p>
                        <button class="book-doctor-btn">Book Appointment</button>
                    </div>
                </div>

                <div class="doctor-card">
                    <img src="images/doctor3.jpg" alt="Dr. Emma Wilson" class="doctor-profile">
                    <div class="doctor-info">
                        <div class="doctor-header">
                            <h3>Dr. Emma Wilson</h3>
                            <span class="status busy">Busy</span>
                        </div>
                        <p class="specialty">Pediatrician</p>
                        <p class="availability">Available: Mon - Thu</p>
                        <button class="book-doctor-btn">Book Appointment</button>
                    </div>
                </div>

                <div class="doctor-card">
                    <img src="images/doctor4.jpg" alt="Dr. Michael Chen" class="doctor-profile">
                    <div class="doctor-info">
                        <div class="doctor-header">
                            <h3>Dr. Michael Chen</h3>
                            <span class="status available">Available</span>
                        </div>
                        <p class="specialty">Dermatologist</p>
                        <p class="availability">Available: Wed - Sun</p>
                        <button class="book-doctor-btn">Book Appointment</button>
                    </div>
                </div>

                <div class="doctor-card">
                    <img src="images/doctor5.jpg" alt="Dr. Rachel Anderson" class="doctor-profile">
                    <div class="doctor-info">
                        <div class="doctor-header">
                            <h3>Dr. Rachel Anderson</h3>
                            <span class="status available">Available</span>
                        </div>
                        <p class="specialty">Orthopedic</p>
                        <p class="availability">Available: Mon - Fri</p>
                        <button class="book-doctor-btn">Book Appointment</button>
                    </div>
                </div>

                <div class="doctor-card">
                    <img src="images/doctor6.jpg" alt="Dr. James Thompson" class="doctor-profile">
                    <div class="doctor-info">
                        <div class="doctor-header">
                            <h3>Dr. James Thompson</h3>
                            <span class="status busy">Busy</span>
                        </div>
                        <p class="specialty">Psychiatrist</p>
                        <p class="availability">Available: Tue - Sat</p>
                        <button class="book-doctor-btn">Book Appointment</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>